{
  "customSyntax": "postcss-scss",
  "extends": "stylelint-config-standard",
  "ignoreFiles": [
    "./src/styles/templates/**/*.scss",
    "./bootstrap/**/*.scss"
  ],
  "plugins": [
    "stylelint-order",
    "stylelint-scss"
  ],
  "rules": {
    "annotation-no-unknown": [
      true,
      {
        "ignoreAnnotations": [
          "default"
        ]
      }
    ],
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "function",
          "if",
          "each",
          "include",
          "mixin",
          "return",
          "warn",
          "error",
          "else",
          "extend",
          "while"
        ]
      }
    ],
    "color-function-notation": "legacy",
    "function-no-unknown": [
      true,
      {
        "ignoreFunctions": [
          "theme-color"
        ]
      }
    ],
    "import-notation": "string",
    "order/properties-order": [
      {
        "groupName": "Dimensions",
        "properties": [
          "height",
          "width",
          "max-height",
          "min-height",
          "max-width",
          "min-width"
        ]
      },
      {
        "groupName": "Spacing",
        "properties": [
          "margin",
          "margin-right",
          "margin-bottom",
          "margin-left",
          "margin-top",
          "padding",
          "padding-right",
          "padding-bottom",
          "padding-left",
          "padding-top"
        ]
      },
      {
        "groupName": "Position",
        "properties": [
          "left",
          "right",
          "top",
          "bottom",
          "position",
          "z-index"
        ]
      },
      {
        "groupName": "Display",
        "properties": [
          "display",
          "flex-direction",
          "flex-wrap",
          "flex-flow",
          "justify-content",
          "align-items",
          "align-content",
          "grid",
          "order",
          "flex-grow",
          "flex-shrink",
          "flex-basis",
          "flex",
          "align-self",
          "grid-column-gap",
          "grid-row-gap",
          "grid-gap",
          "grid-template-columns",
          "grid-template-rows",
          "justify-items",
          "grid-auto-flow",
          "grid-column-start",
          "grid-column-end",
          "grid-row-start",
          "grid-row-end",
          "grid-row",
          "grid-column",
          "justify-self",
          "align-lsef",
          "box-sizing"
        ]
      },
      {
        "groupName": "Box-Styling",
        "properties": [
          "border",
          "border-color",
          "border-radius",
          "border-right",
          "border-right-color",
          "border-right-style",
          "border-right-width",
          "border-top-right-radius",
          "border-bottom",
          "border-bottom-color",
          "border-bottom-style",
          "border-bottom-width",
          "border-bottom-right-radius",
          "border-bottom-left-radius",
          "border-top-left-radius",
          "border-left",
          "border-left-color",
          "border-left-style",
          "border-left-width",
          "border-style",
          "border-top",
          "border-top-color",
          "border-top-style",
          "border-top-width",
          "border-width",
          "background",
          "background-color",
          "background-image",
          "background-repeat",
          "background-size",
          "background-attachment",
          "background-position",
          "color",
          "opacity",
          "visibility"
        ]
      },
      {
        "groupName": "Typography",
        "properties": [
          "font",
          "font-style",
          "font-variant",
          "font-weight",
          "line-height",
          "font-family",
          "font-size",
          "letter-spacing",
          "white-space",
          "word-wrap",
          "writing-mode",
          "word-break",
          "word-spacing",
          "text-align",
          "text-transform",
          "text-shadow",
          "text-overflow",
          "list-style",
          "list-style-type",
          "list-style-image",
          "list-style-position"
        ]
      },
      {
        "groupName": "Transition",
        "properties": [
          "transition",
          "transition-property",
          "transition-duration",
          "transition-timing-function",
          "transition-delay",
          "transform",
          "transform-origin",
          "transform-style",
          "animation",
          "animation-name",
          "animation-duration",
          "animation-timing-function",
          "animation-delay",
          "animation-iteration-count",
          "animation-direction",
          "animation-fill-mode",
          "animation-play-state"
        ]
      }
    ],
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "function",
          "if",
          "each",
          "include",
          "mixin",
          "return",
          "warn"
        ]
      }
    ],
    "scss/dollar-variable-pattern": "$",
    "scss/selector-no-redundant-nesting-selector": true,
    "selector-class-pattern": null,
    "selector-id-pattern": null,
    "selector-pseudo-element-no-unknown": [
      true,
      {
        "ignorePseudoElements": [
          "ng-deep"
        ]
      }
    ]
  }
}
